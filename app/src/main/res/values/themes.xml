<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeightLoss_Pathway_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#006990</item>
        <item name="colorPrimaryVariant">#006990</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Style -->
        <item name="android:fontFamily">@font/gothamnights</item>
        <item name="android:textColor">#006990</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WeightLoss_main_style">
        <item name="android:fontFamily">@font/gothamnights</item>
        <item name="android:textColor">#006990</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeightLoss_title">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeightLoss_motivation">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#77FDED</item>
    </style>

    <style name="WeightLossDaysOfTheWeek">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.WeightLoss_Pathway_project.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeightLoss_Pathway_project.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeightLoss_Pathway_project.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>